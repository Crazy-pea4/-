/**index.wxss**/
.root-wrapper{
  min-height: 100vh;
  overflow: hidden;
}

.header-wrapper{
  background: rgba(0, 0, 0, 0.6) no-repeat center center;
  background-blend-mode: multiply;
  height: 30vh;
  color: #ffffff;
}
.header-content-wrapper{
  padding: 120px 15px 20px 15px;
}
.header-title{
  display: flex;
  justify-content: space-between;
}
.header-text{
  font-size: 32px;
  font-weight: 400;
  display: flex;
  justify-content: space-between;
}
.weather-advice{
  margin-top: 20px;
  display: flex;
  font-size: 12px;
}

.body-wrapper{
  padding: 0px 15px;
}

.body {
  margin-top: 70px;
}

.data-wrapper{
  margin-top: 20px;
  display: flex;
  justify-content: space-around;
}
.data{
  background-color: #111111;
  width: 140px;
  height: 80px;
  display: flex;
  justify-content: space-between;
  border-radius: 5px;
  transition: transform 0.1s ease-in-out;
}
.data:active{
  transform: scale(0.95);
}

.data-left{
  margin-top: 11px;
  margin-left: 15px;
}
.data-logo{
  height: 36px;
  width: 36px;
}
.data-title{
  font-size: 13px;
  color: #999999;
}
.data-value{
  color: #ffffff;
  font-size: 22px;
  margin-top: 11px;
  margin-right: 15px;
}